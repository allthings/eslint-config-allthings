{
  "name": "@allthings/eslint-config",
  "version": "0.0.6",
  "description": "ESlint shareable config for Allthings style",
  "main": "index.js",
  "files": [
    "index.js",
    "node.js"
  ],
  "scripts": {
    "lint": "prettier --check .",
    "test": "eslint test/",
    "predeploy": "yarn test",
    "deploy": "yarn publish --new-version $npm_package_version --tag latest --access public",
    "postdeploy": "git push --tags origin HEAD"
  },
  "dependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0"
  },
  "peerDependencies": {
    "eslint": ">=8.22.0",
    "prettier": ">=2.8.0",
    "typescript": ">=4"
  },
  "devDependencies": {
    "eslint": "^8.28.0",
    "prettier": "2.8.0",
    "typescript": ">=4"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": false
  },
  "repository": "git@github.com:allthings/eslint-config-allthings.git",
  "author": "Dmitry Markov <forall@stylive.com>",
  "license": "MIT"
}
